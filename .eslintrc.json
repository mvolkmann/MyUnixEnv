{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },

  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:prettier/recommended",

    "plugin:jsx-a11y/recommended",
    "plugin:react/recommended",

    "plugin:vue/essential",
    "@vue:prettier"
  ],

  "plugins": ["html", "jsx-a11y", "prettier", "react", "vue"],

  "settings": {
    "react": {
      "version": "detect"
    }
  },

  "rules": {
    "no-console": "off"
  }
}
